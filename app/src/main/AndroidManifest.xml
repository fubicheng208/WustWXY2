<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wustwxy2">

    <!-- 拨打电话权限 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 获取sd卡读的权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SearchEngActivity" />
        <activity android:name=".activity.SearchTableActivity" />
        <activity android:name=".activity.SearchGradeActivity" />
        <activity android:name=".activity.SearchCardActivity" />
        <activity android:name=".activity.SearchComputerActivity" />
        <activity android:name=".activity.SearchBusActivity" />
        <activity android:name=".activity.SearchMapActivity" />
        <activity android:name=".activity.SearchLosingActivity" />
        <activity android:name=".activity.SearchLibActivity" />
        <activity android:name=".activity.AddActivity" />
        <activity android:name=".activity.MyLosingActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.LosingDetailActivity" />
        <activity android:name=".activity.EditLosingActivity"/>
        <activity android:name=".activity.ImageShower"/>
    </application>

</manifest>