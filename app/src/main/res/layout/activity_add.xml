<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/losing_add_toolbar" />

    <EditText
        android:id="@+id/losing_add_title"
        android:paddingLeft="10dp"
        android:hint="@string/losing_title_hint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_edit_height"
        android:layout_margin="10dp"
        style="@style/Fbc.TextView._Gray"
        android:background="@drawable/input"
        />

    <EditText
        android:id="@+id/losing_add_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_edit_height"
        android:paddingLeft="10dp"
        android:layout_margin="10dp"
        android:inputType="phone"
        android:maxLength="11"
        android:hint="@string/losing_phone_hint"
        style="@style/Fbc.TextView._Gray"
        android:background="@drawable/input"
        />

    <EditText
        android:id="@+id/losing_add_describe"
        android:hint="@string/losing_describe_hint"
        android:background="@drawable/input"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        style="@style/Fbc.TextView._Gray"
        android:minLines="4"
        />

