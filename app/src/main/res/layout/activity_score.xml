<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SearchGradeActivity">
    <LinearLayout
        android:id="@+id/ll_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="成绩查询"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:gravity="center"/>
 <LinearLayout
     android:layout_marginTop="16dp"
     android:layout_width="match_parent"
     android:orientation="horizontal"
     android:layout_height="wrap_content">
     <TextView
         android:layout_width="90dp"
         android:layout_height="wrap_content"
         android:text="类型"
         android:gravity="center"
         android:layout_gravity="center"
         android:textSize="18sp"
         />
     <Spinner
         android:layout_marginEnd="16dp"
         android:id="@+id/sp_score"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:entries="@array/score_array">
     </Spinner>
 </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_mc"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="科目名称"
            android:textSize="18sp"
            />
        <EditText
            android:layout_marginEnd="16dp"
            android:id="@+id/et_kmmc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <Button
            android:layout_margin="16dp"
            android:id="@+id/bt_query"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bar"
            android:textColor="#ffff"
            android:text="查询"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_show"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <Button
                android:background="@android:color/transparent"
                android:id="@+id/bt_back"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="返回"
                android:textColor="#ffff"/>
            <TextView
                android:paddingRight="50dp"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="成绩"
                android:textSize="20dp"
                android:textColor="#ffff"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:background="@drawable/bk"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_margin="6dp"
                android:id="@+id/tv_other_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="姓名：吕晴阳\n学号：201513137125\n平均绩点：3.67674418604651"/>
            <LinearLayout
                android:background="@color/bar"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="课程名称"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="成绩"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="学分"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="绩点"/>
            </LinearLayout>
            <ListView
                android:id="@+id/lv_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
