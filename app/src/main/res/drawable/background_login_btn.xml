    <item android:state_pressed="true">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="#55FFFFFF" />
        </shape>
    </item>
    
    <item android:state_focused="true">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="#55FFFFFF" />
        </shape>
    </item>
    
    <item>
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="#FFEEEEEE" />
        </shape>
    </item>

</selector>