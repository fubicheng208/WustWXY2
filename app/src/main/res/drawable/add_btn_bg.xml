<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="4sp"/>
            <solid
                android:color="#ffebee"/>
            <stroke
                android:color="#ffcdd2"
                android:width="1dp"/>
            <padding
                android:top="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="4sp"/>
            <solid
                android:color="#fcfcfc"/>
            <stroke
                android:color="#dcdcdc"
                android:width="1dp"/>
            <padding
                android:top="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>
</selector>